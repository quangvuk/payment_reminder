doctype html
head
    title Bill Payment Reminder
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
    link(rel='stylesheet' href='./css/style.css')

h1 Edit user
a(href='/') Back to Home Page
form(action='/user/create' method='POST')
    .form-group
        label(for='name') Name
        input#name.form-control(type='text' name='name')
    .form-group
        label(for='email') Email
        input#email.form-control(type='text' name='email')
    .form-group
        label(for='phone') Phone
        input#phone.form-control(type='text' name='phone')
    .form-group
        label(for='slackId') Slack ID
        input#slackId.form-control(type='text' name='slackId')   
    .form-group
        button.btn.btn-primary(type='submit') Create